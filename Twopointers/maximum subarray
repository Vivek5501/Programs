#include<bits/stdc++.h>
#include<iostream>
#define ll long long
#define loop(i,a) for(int i=0;i<a;i++)
#define mod 1000000007
#define god 998244353
using namespace std;
int main(){
ios_base::sync_with_stdio(false);cin.tie(NULL);
 ll n,k;
 cin>>n>>k;
 int a[n];
 for(int i=0;i<n;i++){
    cin>>a[i];
 }
 int i=0,j=0;
 int mxi=0;
 int sum=0;
 while(j<n){
     sum+=a[j];
    if(j-i+1<k){
        j++;
    }
    else if(j-i+1==k){
        mxi=max(sum,mxi);
        sum=sum-a[i];
        j++;
        i++;
        
      
    }
 }

 cout<<mxi<<endl;

return 0;
}
